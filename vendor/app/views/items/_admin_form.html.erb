<%= form_for(@item) do |f| %>

    <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this location from being saved:</h2>

          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
 

  <div id="error">

    </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

   <div class="field">
      <%= f.label :image_url %><br />
      <%= f.text_field :image_url %>
   </div>

    <div class="field">
      <%= f.label "price/auction minimum price" %><br />
      <%= f.text_field :price %>
    </div>


    <div class="field">
      <%= f.label :availability %><br />
      <%= f.text_field :availability %>
    </div>

    <div class="field">
      <%= f.label :manufacturer %><br />
      <%= f.text_field :manufacturer %>
    </div>

    <div class="field">
      <%= f.label :featured %><br />
      <%= f.check_box :featured, {}, "true", "false" %>

    </div>

    <div class="field">
      <%= f.label :auction_flag %><br />
      <%= f.check_box :auction_flag, {}, "true", "false" %>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>



    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
