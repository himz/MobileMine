<h1>Categories of the System</h1>
<br/>
<table cellpadding="10" border="1">
  <tr>
    <th>Name</th>
    <th>Show</th>
    <th>Delete</th>
  </tr>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', admin_categories_path(category) %></td>
        <td><%= link_to 'Delete', admin_category_delete_path(category), confirm: 'Are you sure you want to delete the item "'+category.name+'"', method: :delete %></td>

      </tr>
  <% end %>
</table>

