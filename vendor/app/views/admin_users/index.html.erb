<h1>Users of the System</h1>
<br/>
<table cellpadding="10" border="1">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Show</th>
    <th colspan="2">Action</th>

  </tr>

  <% @users.each do |user| %>
      <% if user.activated? then font="#009900" else font="#990000" end %>
      <tr>
        <td><font color="<%=font%>"><%= user.first_name %></font></td>
        <td><font color="<%=font%>"><%= user.last_name %></font></td>
        <td><%= link_to 'Show', admin_users_path(user) %></td>
        <% if user.activated?%>
        <td><%= link_to 'Deactivate', admin_users_deactivate_path(user)%></td>
        <% else %>
        <td><%= link_to 'Activate', admin_users_activate_path(user)%></td>
        <% end %>
        <td><%= link_to 'Delete', admin_users_delete_path(user), confirm: 'Are you sure you want to delete the item "'+user.first_name+'"', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br />

