<h1>Categories of the System</h1>
<br/>
<table cellpadding="10" border="0" class="table">
  <tr>
    <th>Name</th>
    <th>Show</th>
    <th>Delete</th>
  </tr>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to image_tag("icon/magnify.png", :border => 0), admin_categories_path(category) %></td>
        <td><%= link_to image_tag("icon/delete.png", :border => 0), admin_category_delete_path(category), confirm: 'Are you sure you want to delete the item "'+category.name+'"', method: :delete %></td>

      </tr>
  <% end %>
</table>

