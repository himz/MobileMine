<!-- Submitted form is sent to credit_info controller, common form used for new and edit -->
<%= form_for(@credit_info) do |f| %>
  <% if @credit_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@credit_info.errors.count, "error") %> prohibited this credit_info from being saved:</h2>

      <ul>
      <% @credit_info.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Display fields for user to enter credit card info -->
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :billing_address %><br />
    <%= f.text_field :billing_address %>
  </div>
  <div class="field">
    <%= f.label :credit_card_no %><br />
    <%= f.text_field :credit_card_no %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.number_field :zipcode %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
